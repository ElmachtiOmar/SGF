@model Core.Entities.Facture

<h2>Edit Facture</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NetaPayerHT"></label>
        <input asp-for="NetaPayerHT" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="NetaPayerTTC"></label>
        <input asp-for="NetaPayerTTC" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Client.Name"></label>
        <input asp-for="Client.Name" class="form-control" />
    </div>



    <div class="form-group">
        <button type="submit" class="btn btn-primary my-3">Save</button>
        <a asp-action="Index" class="btn btn-secondary my-3">Cancel</a>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        $(document).ready(function () {
            bsCustomFileInput.init();
        });
    </script>
}

